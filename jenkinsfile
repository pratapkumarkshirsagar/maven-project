 pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/pratapkumarkshirsagar/maven-project.git'
        }
  }
     {
        stage ('Validate Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean validate'
                }
            }
}
}
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean compile'
                }
            }
}
}
    {
        stage ('Test Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean test'
                }
            }
}
}
    {
        stage ('Package Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean package'
                }
            }
}
} 
    {
        stage ('Verify Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean verify'
                }
            }
}
}
    {
        stage ('Install Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean install'
                }
            }
}
}

    {
        stage ('Deploy Stage') {
        
           steps{ 
             sshagent (credentials: ['1a9f8f19-8003-4322-aaab-3df21dbc8263']) {
             sh 'scp -o StrictHostKeyChecking=no -l */target/*.war ec2-user@172.31.44.173:/var/lib/tomcat/webapps'
  }
}
}
} 
} 




