 pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/pratapkumarkshirsagar/maven-project.git'
        }
  }
     {
        stage ('Validate Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean validate'
                }
            }
}
}
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean compile'
                }
            }
}
}
    {
        stage ('Test Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean test'
                }
            }
}
}
    {
        stage ('Package Stage') {

            steps {
                withMaven(maven : 'EC2MAVEN') {
                    sh 'mvn clean package'
                }
            }
}
}     
}



